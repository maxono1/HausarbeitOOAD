                    <MenuItem text="Exit"/>
                </items>
            </Menu>
            <Menu text="Edit">
                <items>
                    <MenuItem text="Copy"/>
                    <MenuItem text="Cut"/>
                    <MenuItem text="Paste"/>
                </items>
            </Menu>
            <Menu text="Help">
                <items>
                    <MenuItem disable="true" text="Search"/>
                    <MenuItem text="Online Manual" visible="false"/>
                    <SeparatorMenuItem/>
                    <MenuItem onAction="#handleAboutAction" text="About"/>
                </items>
            </Menu>
        </menus>
    </MenuBar>

    <ButtonBar prefHeight="30.0" prefWidth="400.0" BorderPane.alignment="CENTER">
        <buttons>
            <Button mnemonicParsing="false" onAction="#handleOnActionLogout" text="Logout"/>
        </buttons>
        <BorderPane.margin>
            <Insets bottom="5.0" left="10.0" right="10.0" top="5.0"/>
        </BorderPane.margin>
    </ButtonBar>
    <VBox alignment="CENTER" prefHeight="88.0" prefWidth="700.0">
        <children>

            <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="53.0" prefWidth="166.0" text="StartmenÃ¼"
                   textAlignment="JUSTIFY">
                <font>
                    <Font size="36.0"/>
                </font>
            </Label>
        </children>
    </VBox>
    <VBox alignment="CENTER" BorderPane.alignment="CENTER">
        <children>
            <Button mnemonicParsing="false" onAction="#handleOnActionSceneOne" prefWidth="170.0" text="Shop">
                <VBox.margin>
                    <Insets top="30.0"/>
                </VBox.margin>
                <padding>
                    <Insets bottom="10.0" left="30.0" right="30.0" top="10.0"/>
                </padding>
            </Button>
            <Button mnemonicParsing="false" onAction="#handleOnActionSceneTwo" prefWidth="170.0" text="Sammlung">
                <VBox.margin>
                    <Insets top="30.0"/>
                </VBox.margin>
                <padding>
                    <Insets bottom="10.0" left="30.0" right="30.0" top="10.0"/>
                </padding>
            </Button>
            <Button mnemonicParsing="false" onAction="#handleonActionGuthabenScene" prefWidth="170.0" text="Guthaben verwalten">
