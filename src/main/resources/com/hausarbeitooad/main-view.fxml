                </VBox.margin>
                <padding>
                    <Insets bottom="10.0" left="30.0" right="30.0" top="10.0"/>
                </padding>
            </Button>
            <Button mnemonicParsing="false" onAction="#handleOnActionSceneThree" prefWidth="170.0" text="Option">
                <VBox.margin>
                    <Insets top="30.0"/>
                </VBox.margin>
                <padding>
                    <Insets bottom="10.0" left="30.0" right="30.0" top="10.0"/>
                </padding>
            </Button>
        </children>
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </padding>
    </VBox>
