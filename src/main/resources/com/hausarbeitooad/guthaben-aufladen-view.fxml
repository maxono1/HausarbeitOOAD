<AnchorPane prefHeight="500.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.hausarbeitooad.controller.GuthabenAufladenController">
   <children>
      <AnchorPane prefHeight="500.0" prefWidth="700.0">
         <children>
            <Separator layoutY="95.0" prefHeight="18.0" prefWidth="714.0" />
            <Label alignment="CENTER" contentDisplay="TOP" layoutX="161.0" layoutY="51.0" prefHeight="18.0" prefWidth="403.0" text="Guthaben aufladen">
               <font>
                  <Font size="36.0" />
               </font>
            </Label>
            <Button layoutX="14.0" layoutY="14.0" mnemonicParsing="false" onAction="#onActionGuthabenAufladenBackBtn">
               <graphic>
                  <ImageView fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../images/left-arrow.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
            <VBox alignment="TOP_CENTER" layoutY="104.0" prefHeight="396.0" prefWidth="714.0">
               <children>
                  <Label alignment="TOP_LEFT" text="Wie viel wollen Sie aufladen">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Label>
                  <Button mnemonicParsing="false" onAction="#onClick20Euro" prefHeight="25.0" prefWidth="152.0" text="20€">
                     <VBox.margin>
                        <Insets top="25.0" />
                     </VBox.margin>
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#onClick50Euro" prefHeight="25.0" prefWidth="152.0" text="50€">
                     <font>
                        <Font size="24.0" />
                     </font>
                     <VBox.margin>
                        <Insets top="25.0" />
                     </VBox.margin>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#onClick100Euro" prefHeight="25.0" prefWidth="152.0" text="100€">
                     <font>
                        <Font size="24.0" />
                     </font>
                     <VBox.margin>
                        <Insets top="25.0" />
                     </VBox.margin>
                  </Button>
                  <Label text="Eigenen Betrag eingeben">
                     <VBox.margin>
                        <Insets top="10.0" />
                     </VBox.margin>
                  </Label>
                  <TextField fx:id="moneyID" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="25.0" prefWidth="120.0">
                     <VBox.margin>
                        <Insets top="5.0" />
                     </VBox.margin>
                  </TextField>
                  <Button mnemonicParsing="false" onAction="#onActionGuthabenAufladenBtn" prefHeight="25.0" prefWidth="152.0" text="Submit">
                     <font>
                        <Font size="24.0" />
                     </font>
                     <VBox.margin>
                        <Insets top="15.0" />
                     </VBox.margin>
                  </Button>
               </children>
            </VBox>
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
